{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, {"SwitchCase": 1}],
    "max-len": ["error", 120],
    "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["warn", { "varsIgnorePattern": "^(_|ui$|grok$|DG$)", "argsIgnorePattern": "^_"}],
    "@typescript-eslint/require-array-sort-compare": "error",
    "require-jsdoc": "off",
    "valid-jsdoc": "warn",
    "spaced-comment": "off",
    "linebreak-style": "off",
    "curly": [
      "error",
      "multi-or-nest",
      "consistent"
    ],
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "block-spacing": [2, "always"],
    "comma-dangle": "off",
    "comma-spacing": "error",
    "comma-style": "error",
    "guard-for-in": "off",
    "space-infix-ops": "error"
  },
  "plugins": [
    "@typescript-eslint"
  ]
}
