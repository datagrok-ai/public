{
	"env": {
	  "browser": true,
	  "es2021": true
	},
	"extends": [
	  "google"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
	  "ecmaVersion": 12,
	  "sourceType": "module"
	},
	"plugins": [
	  "@typescript-eslint"
	],
	"rules": {
	  "indent": [
		"error",
		2
	  ],
	  "max-len": [
		"error",
		120
	  ],
	  "require-jsdoc": "off",
	  "spaced-comment": "off",
	  "linebreak-style": "off",
	  "curly": [
		"error",
		"multi-or-nest"
	  ],
	  "brace-style": [
		"error",
		"1tbs",
		{ "allowSingleLine": true }
	  ]
	}
  }