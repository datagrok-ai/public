{
  "compilerOptions": {
    "outDir": "./built",
    "target": "es6",
    "module": "es2020",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,              /* Enables experimental support for ES7 decorators. */
    "emitDecoratorMetadata": true,
  }
}
