{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": [
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "max-len": [
      "error",
      120
    ],
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "spaced-comment": "off",
    "linebreak-style": "error",
    "object-curly-spacing": "error",
    "curly": [
      "error",
      "multi-or-nest"
    ],
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "block-spacing": [2, "always"],
    "comma-dangle": "off",
    "comma-spacing": "error",
    "comma-style": "error",
    "guard-for-in": "off",
    "space-infix-ops": "error"
  }
}