{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "max-len": ["error", 120],
    "max-params": ["warn", 7],
    "max-lines-per-function": ["warn", 500],
    "max-lines": ["warn", 1000],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "spaced-comment": "off",
    "linebreak-style": "off",
    "curly": [
      "error",
      "multi-or-nest",
      "consistent"
    ],
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "block-spacing": [2, "always"],
    "comma-dangle": ["error", {
      "arrays": "only-multiline",
      "functions": "only-multiline",
      "objects": "only-multiline",
      "imports": "only-multiline"
    }],
    "guard-for-in": "off"
  }
}
