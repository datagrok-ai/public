{
  "name": "@datagrok/chatgpt",
  "friendlyName": "ChatGPT",
  "version": "1.0.4",
  "description": "ChatGPT integration",
  "author": "oserhiienko@datagrok.ai",
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.31",
    "@ai-sdk/openai": "^3.0.23",
    "@ai-sdk/provider": "^3.0.6",
    "@datagrok-libraries/db-explorer": "^1.7.2",
    "@datagrok-libraries/test": "^1.1.0",
    "@datagrok-libraries/utils": "^4.6.5",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@types/dom-chromium-ai": "^0.0.10",
    "ai": "^6.0.62",
    "cash-dom": "^8.1.5",
    "datagrok-api": "../../js-api",
    "dayjs": "^1.11.19",
    "openai": "^6.16.0"
  },
  "devDependencies": {
    "@types/dom-speech-recognition": "^0.0.7",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "css-loader": "^7.1.2",
    "datagrok-tools": "^5.0.0",
    "eslint": "^8.57.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-rxjs": "^5.0.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "scripts": {
    "link-all": "grok link",
    "debug-chatgpt": "webpack && grok publish",
    "release-chatgpt": "webpack && grok publish --release",
    "build-chatgpt": "webpack",
    "build": "grok api && grok check --soft && webpack",
    "debug-chatgpt-dev": "webpack && grok publish dev",
    "release-chatgpt-dev": "webpack && grok publish dev --release",
    "debug-chatgpt-public": "webpack && grok publish public",
    "release-chatgpt-public": "webpack && grok publish public --release"
  },
  "canEdit": [
    "Administrators"
  ],
  "canView": [
    "All users"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/datagrok-ai/public.git",
    "directory": "packages/ChatGPT"
  },
  "sources": [
    "css/ai.css"
  ],
  "properties": [
    {
      "name": "vectorStoreId",
      "propertyType": "string",
      "description": "Vector Store ID with Datagrok documentation",
      "defaultValue": "",
      "nullable": true
    },
    {
      "name": "defaultFastModel",
      "propertyType": "string",
      "description": "Fast Model name for simple tasks. This must match the model names supported by OpenAI or name of deployed model.",
      "defaultValue": "gpt-4o-mini",
      "nullable": false
    },
    {
      "name": "defaultDeepResearchModel",
      "propertyType": "string",
      "description": "Deep Research Model name for complex tasks. This must match the model names supported by OpenAI or name of deployed model.",
      "defaultValue": "gpt-5.2",
      "nullable": false
    },
    {
      "name": "defaultCodingModel",
      "propertyType": "string",
      "description": "Coding Model name for code generation tasks. This must match the model names supported by OpenAI or name of deployed model.",
      "defaultValue": "gpt-5.1-codex-max",
      "nullable": false
    },
    {
      "name": "APIName",
      "propertyType": "string",
      "description": "OpenAI API endpoint. Responses or Chat completions API can be used.",
      "defaultValue": "openai chat completions",
      "nullable": false,
      "choices": [
        "openai chat completions",
        "openai responses"
      ]
    },
    {
      "name": "apiVersion",
      "propertyType": "string",
      "description": "API version for OpenAI endpoint. v1 or v2.",
      "defaultValue": "v1",
      "nullable": true
    }
  ],
  "overrides": {
    "datagrok-api": "$datagrok-api"
  }
}
